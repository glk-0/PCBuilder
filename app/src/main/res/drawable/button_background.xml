<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Button with shadow when pressed -->
        <layer-list>
            <!-- Shadow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#80000000" /> <!-- Semi-transparent shadow -->
                    <corners android:radius="0dp" /> <!-- Matches corner radius -->
                </shape>
            </item>

            <!-- Button Background -->
            <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" /> <!-- Button color -->
                    <corners android:radius="0dp" />
                </shape>
            </item>
        </layer-list>


        <!-- Default button with shadow -->
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#80000000" /> <!-- Semi-transparent black shadow -->
                    <corners android:radius="0dp" /> <!-- Rounded corners for the shadow -->
                </shape>
            </item>

            <!-- Button Background -->
            <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" /> <!-- Button color (white in this case) -->
                    <corners android:radius="0dp" /> <!-- Rounded corners for the button -->
                </shape>
            </item>
        </layer-list>
</selector>
